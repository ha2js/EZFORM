<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezform.mapper.mem_Mapper">

	<!-- 회원가입 --> 
	<insert id="joinMem">
		insert into ez_em (em_id,em_email,em_pw,em_name,em_dept,em_posi,em_regdate,em_extension,em_image) 
		values (#{em_id},#{em_email},#{em_pw},#{em_name},#{em_dept},#{em_posi},now(),#{em_extension},#{em_image})
	</insert>
	
	<!-- 수정 --> 
	<update id="updateEmp">
		update 테이블명 set pass=#{pass},dept=#{dept},rank={rank},phone=#{phone} 
		where id=#{id} 
	</update>
	
	<!-- 삭제 -->
	<delete id="deleteEmp">
		delete from 테이블명 
		where id=#{id} and name=#{name}
	</delete>
	
</mapper>
